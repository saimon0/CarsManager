{% extends 'base.html.twig' %}

{% block title %}Cars services{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_css') }}
{% endblock %}

{% block head %}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>
{% endblock %}

{% block body %}
    <div class="w-100" id="header-service-div">
        <h1 id="header-service">Planned cars services</h1>
    </div>
    <div class="container-fluid" id="service-nav-div">
        <a href="#"><button type="button" class="btn btn-success" id="add-car-btn">Plan a service</button></a>
        <a href="{{ path('car_service_display') }}"><button type="button" class="btn btn-primary" id="refresh-car-main-btn">Refresh</button></a>
        <a href="/car"><button type="button" class="btn btn-light" id="return-car-main-btn">Return</button></a>
    </div>

    <div class="container-fluid" id="car-main-div">
        <div class="container-fluid" id="car-main-div-info">
            <h3 id="header-car-info">All planned car services</h3>
        </div>
        <div class="container-fluid" id="div-display-cars">
            <table class="table table-bordered">

            </table>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}