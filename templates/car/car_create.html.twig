{% extends 'base.html.twig' %}

{% block title %}Hello CarController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_css') }}

{% endblock %}

{% block head %}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    </head>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="car-main-div">
        <div class="container-fluid" id="car-main-div-info">
            <h3>Company cars can be added, removed or updated. You can also plan a car service</h3>
            <a href="{{ path('car_create') }}"><button type="button" class="btn btn-primary" id="add-car-btn">Add car</button></a>
            <a href="{{ path('car_remove') }}"><button type="button" class="btn btn-primary" id="remove-car-btn">Remove car</button></a>
            <a href="{{ path('car_update') }}"><button type="button" class="btn btn-primary" id="update-car-btn">Update car</button></a>
            <a href="{{ path('car_display') }}"><button type="button" class="btn btn-primary" id="display-car-btn">Display cars</button></a>
            <a href="/main"><button type="button" class="btn btn-info" id="return-car-create-btn">Return</button></a>
        </div>

        <div class="container-fluid" id="create-car-form-div">
            <h4>Enter car's details to add it to the database</h4>
            {{ form_start(form) }}
            <form id="form-add-car">
                <div class="form-group w-25">
                    {{ form_row(form.mark, {'label': 'Mark'}) }}
                    <small id="emailHelp" class="form-text text-muted">e.g. Volkswagen, BMW, Opel etc.</small>
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.model, {'label': 'Model'}) }}
                    <small id="emailHelp" class="form-text text-muted">e.g. Golf, series 3, Astra etc.</small>
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.yearProd, {'label': 'Year of production'}) }}
                    <small id="emailHelp" class="form-text text-muted">Pick the correct year of car's production</small>
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.engineType, {'label': 'Engine type'}) }}
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.engineCapacity) }}
                    <small id="emailHelp" class="form-text text-muted"><b>2-digit</b> engine's capacity e.g. 2.5 (dm3)</small>
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.mileage) }}
                    <small id="emailHelp" class="form-text text-muted">Current car's mileage .e.g. 25000</small>
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.vin, {'label': 'VIN number'}) }}
                    <small id="emailHelp" class="form-text text-muted">16-digit unique series number e.g. WOL123456789123</small>
                </div>
                <div class="form-group w-25">
                    {{ form_row(form.user, {'label': "Car's user"}) }}
                    <small id="emailHelp" class="form-text text-muted">Current user of car (if is used)</small>
                </div>
                <div class="form-check">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}