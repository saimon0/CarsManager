{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_css') }}
{% endblock %}

{% block head %}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
{% endblock %}

{% block body %}
    <div class="container-fluid" id="main-container">
        <div class="col-md-12" id="div-header">
            <h2>Simple CRUD cars manager system</h2>
        </div>
        <div class="container-fluid" id="nav">
            <div class="row" id="nav-div">
                <a href="{{ path('car_main') }}"><button type="button" class="btn btn-primary" id="manage-cars-btn">Manage cars</button></a>
                <a href="{{ path('employee_main') }}"><button type="button" class="btn btn-primary" id="manage-employees-btn">Manage employees</button></a>
            </div>
        </div>
    </div>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
{% endblock %}
